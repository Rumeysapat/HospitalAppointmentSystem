<script>
  document.addEventListener("DOMContentLoaded", function () {
    const appointmentButton = document.querySelector(".cta-btn");
    if (appointmentButton) {
      appointmentButton.addEventListener("click", function (e) {
        e.preventDefault();
        const appointmentSection = document.querySelector("#appointment");
        if (appointmentSection) {
          appointmentSection.scrollIntoView({ behavior: "smooth" });
        }
      });
    }

    // Departman değişince doktorları yükle
    const $department = $('#department');
    const $doctor = $('#doctor');

    if ($department.length && $doctor.length) {
      $department.change(function () {
        const departmentId = $(this).val();
        $doctor.empty().append('<option value="">Loading...</option>');

        if (departmentId) {
          $.getJSON('/Home/GetDoctorsByDepartment', { departmentId: departmentId })
            .done(function (data) {
              $doctor.empty().append('<option value="">Select Doctor</option>');
              if (data.length > 0) {
                $.each(data, function (index, doctor) {
                  $doctor.append(`<option value="${doctor.id}">${doctor.name}</option>`);
                });
              } else {
                $doctor.append('<option value="">No doctors found</option>');
              }
            })
            .fail(function () {
              $doctor.empty().append('<option value="">Error loading doctors</option>');
            });
        } else {
          $doctor.empty().append('<option value="">Select Doctor</option>');
        }
      });
    }

    // Saatleri yükle butonuna tıklama
    const btnShowSlots = document.getElementById('btnShowAvailableSlots');
    if (btnShowSlots) {
      btnShowSlots.addEventListener('click', function () {
        const doctorId = document.getElementById('doctor').value;
        const appointmentDate = document.getElementById('date').value;

        if (!doctorId || !appointmentDate) {
          alert('Lütfen doktor ve tarih seçiniz.');
          return;
        }

        loadAllSlotsWithOccupied(doctorId, appointmentDate);
      });
    }

    // Randevuyu onayla butonu
    const confirmBtn = document.getElementById('confirmAppointmentBtn');
    if (confirmBtn) {
      confirmBtn.addEventListener('click', function () {
        console.log('Submit butonuna tıklandı');
        // Burada form gönderimi veya başka bir işlem yapılabilir
      });
    }
  });

  // Randevu saatlerini yükleyen fonksiyon
  function loadAllSlotsWithOccupied(doctorId, appointmentDate) {
    $.when(
      $.getJSON('/Home/GetAppointmentStatus', { doctorId: doctorId, date: appointmentDate }),
      $.getJSON('/Home/GetWorkingHours', { doctorId: doctorId })
    ).done(function (occupiedResponse, workingResponse) {
      const occupiedSlots = occupiedResponse[0];
      const workingHours = workingResponse[0];

      const $list = $('#availableSlotsList');
      $list.empty();

      workingHours.forEach(slot => {
        const isOccupied = occupiedSlots.includes(slot);
        const cssClass = isOccupied ? 'occupied' : 'available';
        $list.append(`<li class="list-group-item ${cssClass}">${slot}</li>`);
      });

      // Saat seçme işlemi
      $list.off('click').on('click', 'li.available', function () {
        $list.find('li').removeClass('selected');
        $(this).addClass('selected');
        $('#selectedSlot').val($(this).text());
        console.log("Seçilen slot:", $(this).text());
        $('#confirmAppointmentBtn').prop('disabled', false);
      });
    }).fail(function () {
      alert('Saatler yüklenirken hata oluştu.');
    });
  }
</script>
